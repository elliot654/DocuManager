<Window x:Class="DocuManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocuManager"
        Title="DocuManager" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f4">

    <Window.Resources>
        <!-- Modern Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#d9534f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hint Label Style -->
        <Style x:Key="HintLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Background" Value="#f2f2f2"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#bbb"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style: Softer background and font -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#f0f0f0"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="4,4,4,4"/>
            <Setter Property="BorderBrush" Value="#d0d0d0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="True">
                            <GridViewRowPresenter Content="{TemplateBinding Content}"
                                          Columns="{TemplateBinding GridView.ColumnCollection}"
                                          Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#f2f7fb"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#d0e8f2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
          AllowDrop="True"
          Drop="Panel_Drop"
          Margin="0,0,0,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="207*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#f5f5f5"
                CornerRadius="10"
                BorderBrush="#ddd"
                BorderThickness="1"
                Grid.ColumnSpan="2">

                <Grid>
                    <ListView x:Name="ItemsList"
                          FontSize="14"
                          BorderThickness="0"
                          Background="#fbfbfb"
                          GridViewColumnHeader.Click="GridViewColumnHeader_Click"
                          AllowDrop="True"
                          PreviewMouseLeftButtonDown="ItemsList_PreviewMouseLeftButtonDown"
                          MouseMove="ItemsList_MouseMove"
                          Drop="ItemsList_Drop">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                                <GridViewColumn Header="Characters" DisplayMemberBinding="{Binding Characters}" Width="100"/>
                                <GridViewColumn Header="Words" DisplayMemberBinding="{Binding Words}" Width="100"/>
                                <GridViewColumn Header="Paragraphs" DisplayMemberBinding="{Binding Paragraphs}" Width="100"/>
                                <GridViewColumn Header="Extension" DisplayMemberBinding="{Binding Extension}" Width="80"/>
                                <GridViewColumn Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remove"
                                                Click="Remove_Click"
                                                Tag="{Binding Id}"
                                                Style="{StaticResource DeleteButtonStyle}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Label x:Name="HintLabel"
                       Content="📂 Drop files here to import"
                       Style="{StaticResource HintLabelStyle}"
                       Visibility="Hidden"
                       IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Grid>

        <!-- BOTTOM-RIGHT BUTTON -->
        <Button Grid.Row="1"
            Content="Button"
            Width="140"
            Height="28"
            HorizontalAlignment="Right"
            Margin="0,10,0,0" Click="Button_Click"/>
    </Grid>
</Window>